@model CarrinhoCompraViewModel

<div class="Container">
    <img src="~/images/shopping-cart.png" width="50" height="50" />

<div class="row">
    
    <div>
        <h4>Seu carrinho de compras:</h4>
    </div>

        <table class="table table-striped table-bordered">
        <thead>
            <tr>
                    <th class="text-center">Quantidade</th>
                    <th class="text-center">Lanche</th>
                    <th class="text-center">Preço</th>
                    <th class="text-center">Subtotal</th>
                    <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItems)
            {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-center">@item.Jogo.Nome</td>
                        <td class="text-center">@item.Jogo.Preco.ToString("c")</td>
                        <td class="text-center">
                            @((item.Quantidade * item.Jogo.Preco).ToString("c"))
                        </td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemCarrinho"
                                asp-route-JogoId="@item.Jogo.Id">
                                <img src="~/images/trash.png" width="23" height="23" />
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">Total:</td>
                 <td class="text-center">
                    @Model.CarrinhoCompraTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-end">
        @* <div class="btn-group"> *@
            <a class="btn btn-primary" asp-controller="Jogo" asp-action="List">Continuar Comprando</a>
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar</a>
        @* </div> *@
    </div>
</div>
</div>