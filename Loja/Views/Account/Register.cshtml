@model LoginViewModel

<table class="table">
    <tr>
        <td>
            <img src="~/images/nova-conta.png" width="100px" alt="Nova conta" class="center-block" />
        </td>
        <td>
             <div class="row">
                <div class="col-12 col-lg-12">
                    <h4>Registrar usuário</h4>

                    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
                        <hr />

                          @* <div asp-validation-summary="All" class="text-danger"></div> *@

                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <div class="col-md-6">

                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>                            
                            </div>
                        </div>

                        <div class="form-group col-6">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-success mt-2" value="Registrar" />
                        </div>
                    </form>

                </div>
             </div>
        </td>
    </tr>
</table>