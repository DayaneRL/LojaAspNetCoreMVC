@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMsg</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do pedido: <strong>@Model.Id</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Jogo</th>
                    <th>Preço</th>
                </tr>
                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Jogo.ImagemUrl" width="40" height="40"/></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Jogo.Nome</td>
                        <td>@item.Jogo.Preco</td>
                    </tr>
                }
            </table>

            <h4> 
                Valor total do pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong>
            </h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align:center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>